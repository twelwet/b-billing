extends layout

block content
  h3= generalInfo.name
  table(border='1')
    tr
      th
        b ASSET
      th
        b CLOSED
      th
        b BUY (coins)
      th
        b SELL (coins)
      th
        b PROFIT
      th
        b FEE
    each pair in pairs
      tr
        td= pair[`asset`]
        td= pair[`isClosed`] ? `yes` : `no`
        td= pair[`buyCoins`]
        td= pair[`sellCoins`]
        td(style= pair[`profit`] < 0 ? {color: `red`} : {color: `black`})= pair[`profit`]
        td= pair[`fee`]
    tr
      td
        b Summary
      td
        b -
      td
        b -
      td
        b -
      td
        b= summaryInfo.profit
      td
        b= summaryInfo.fee
